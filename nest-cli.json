{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "watchAssets": true,
    "assets": ["**/*.json", "**/*.env", "**/*.js"]
  },
  "watchOptions": {
    "watch": ["src"],
    "extensions": ["ts", "js", "json"]
  }
}


